<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="FullscreenTheme" parent="android:Theme.NoTitleBar">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@null</item>
        <item name="metaButtonBarStyle">@style/ButtonBar</item>
        <item name="metaButtonBarButtonStyle">@style/ButtonBarButton</item>
    </style>

    <style name="ButtonBar">
        <item name="android:paddingLeft">2dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingRight">2dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:background">@android:drawable/bottom_bar</item>
    </style>

    <style name="ButtonBarButton" />

    <style name="ButtonStyle">
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="strokeColor">@color/text_stroke_color</item>
        <item name="strokeWidth">4</item>
        <item name="android:textStyle">bold|italic</item>
        <item name="customFont">@string/main_font_name</item>
        <item name="android:paddingTop">20dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:background">@color/buttons_color</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="MainFontStyle">
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">@dimen/main_text_size</item>
        <item name="strokeColor">@color/text_stroke_color</item>
        <item name="strokeWidth">4</item>
        <item name="android:textStyle">bold</item>
        <item name="customFont">@string/main_font_name</item>
    </style>

    <style name="ExtFontStyle">
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">@dimen/ext_text_size</item>
        <item name="strokeColor">@color/text_stroke_color</item>
        <item name="strokeWidth">4</item>
        <item name="android:textStyle">bold|italic</item>
        <item name="customFont">@string/ext_font_name</item>
    </style>

</resources>
